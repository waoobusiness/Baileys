# Token exigé par le gateway sur tous les endpoints (Authorization: Bearer ...)
AUTH_TOKEN=replace_me_with_a_strong_token

# Dossier d'auth Baileys (multi-file)
AUTH_DIR=.baileys_auth

# URL du webhook Supabase (wa-webhook) – le gateway y POSTe les events
WEBHOOK_BASE=https://<YOUR-SUPABASE-PROJECT>.functions.supabase.co/wa-webhook

# Secret partagé pour wa-webhook (doit = WEBHOOK_SECRET côté Supabase)
WEBHOOK_SECRET=replace_me_shared_secret

# Nom “navigateur” Baileys (cosmétique)
BROWSER_NAME=Zuria.AI
